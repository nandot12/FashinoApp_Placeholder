<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_whishlist"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d3d3d3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:background="#FAFAFA">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/circuler_rectangle_whishlist"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:src="@drawable/shopingbag" />

        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create New List"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="13dp"
            android:paddingRight="20dp" />




    </LinearLayout>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/viewline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <customfonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create New List"
                android:textColor="@color/blue"
                android:textSize="15sp"
                android:layout_marginLeft="20dp" />

            <customfonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 items"
                android:textColor="@color/substr"
                android:textSize="12sp"
                android:layout_marginLeft="20dp"/>

            </LinearLayout>


        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_rectangle_1"
            android:text="View All"
            android:layout_marginRight="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:paddingLeft="12dp"
            android:textColor="@color/white" />
    </LinearLayout>




    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/viewline"
        android:layout_marginTop="15dp" />


    <customfonts.MyTextView_Roboto_Regular
        android:id="@+id/myTextView_Roboto_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:text="OOPS"
        android:textSize="30sp" />


    <customfonts.MyTextView_Roboto_Regular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/substr"
        android:text="No item in the list"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center" />

    <customfonts.MyTextView_Roboto_Regular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Start shop now"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/whishlist_blue_round"
        android:layout_marginTop="35dp"
       android:layout_gravity="center" />
</LinearLayout>

