<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/light_border_rectangle"
        android:orientation="vertical">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="15dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



                <ProgressBar
                    android:id="@+id/progress"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />


            <ImageView
                android:id="@+id/img"
                android:layout_width="135dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="14dp" />

            </FrameLayout>


            <customfonts.MyTextView_Helvetica_Nue_Medium
                android:id="@+id/txt_bag_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="26dp"
                android:text="Febric Black Doss"
                android:textSize="12sp" />

            <customfonts.MyTextView_Helvetica_Nue_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:text="Hand Bag"
                android:textColor="#a3a3a3"
                android:textSize="12sp" />

            <RatingBar
                android:id="@+id/ratingbar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:numStars="5"
                android:progressTint="#f9a72d"
                android:rating="4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="17dp"
                android:gravity="center"
                android:orientation="horizontal">

                <customfonts.MyTextView_Lato_Black
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:text="$" />


                <customfonts.MyTextView_Lato_Black
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="89"
                    android:layout_marginLeft="3dp"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>