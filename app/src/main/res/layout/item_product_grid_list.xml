<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="260dp"
        android:orientation="vertical"
        android:background="@drawable/product_list_rect"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp">


        <customfonts.MyTextView_Roboto_Bold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#95989a"
            android:text="SALE 10%"
            android:background="@drawable/product_list_rect"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:textSize="10sp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="11dp"/>


        <ImageView
            android:id="@+id/phone_image"
            android:layout_width="103dp"
            android:layout_height="103dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:src="@drawable/iphn_7"/>

        <customfonts.MyTextView_Helvetica_Nue_Medium
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="13sp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:text="Iphone 6S, 32GB (Golden and Silver)"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:progressTint="#F9A72D"
                android:stepSize="1.0"
                android:rating="3"
                style="?android:attr/ratingBarStyleSmall" />

            <customfonts.MyTextView_Roboto_Bold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:layout_marginLeft="10dp"
                android:textSize="11.5sp"
                android:textColor="#95989a"/>
            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <customfonts.MyTextView_Lato_Black
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="16sp"
                android:layout_marginRight="10dp"
                android:text="@string/price"/>

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_cart"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>